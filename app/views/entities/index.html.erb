<nav class="navbar text-light nav-mobile p-2">
  <div class="d-flex justify-content-between w-100 align-items-center">
    <%= link_to fa_icon('arrow-left', class: 'fa-solid'), root_path, class: 'btn btn-light' %>
    <a class="navbar-brand text-light" href="#">Transactions</a>
   <div class="d-flex align-items-center gap-2">
    <img src="<%= url_for(current_user.avatar) %>" alt="User Display Image" class="img-fluid rounded-circle" style="width: 50px; height: 50px;">
    </div>
  </div>
</nav>

<div class="container d-flex flex-column p-4 background-container">
<div class="row">
  <% @entities.each do |entity| %>
    <div class="col-md-4 mb-3">
      <div class="card h-100">
        <div class="card-body d-flex align-items-center">
          <img src="<%= url_for(entity.category.icon) %>" alt="Category Icon" class="card-img-top" style="max-width: 70px;">
          <div class="col-6">  
            <h5 class="card-title"><%= entity.name %></h5>
            <p class="card-text"><small class="text-muted"><%= entity.created_at.strftime('%d %b %Y') %></small></p>
          </div>
          <div class="col-4">
            <p class="card-text">$<%= entity.amount %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

  <%= link_to "Create a new Transaction", new_category_entity_path, :class => 'post-button btn btn-primary' %>
</div>