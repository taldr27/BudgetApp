<nav class="navbar text-light nav-mobile p-2">
  <div class="d-flex justify-content-between w-100 align-items-center">
    <%= link_to fa_icon('arrow-left', class: 'fa-solid'), :back, class: 'btn btn-light' %>
    <a class="navbar-brand text-light" href="#">Transactions</a>
    <%= button_to "Log out", destroy_user_session_path, class: 'btn btn-dark', method: :delete, data: { turbo: false }  %>
    <img src="<%= url_for(current_user.avatar) %>" alt="User Display Image" class="img-fluid rounded-circle" style="width: 50px; height: 50px;">
  </div>
</nav>

<div class="container d-flex flex-column p-4 background-container">
  <div class="row">
    <% @entities.each do |entity| %>
        <div class="col-md-4 mb-4 card-container">
          <div class="h-100 card-style">
            <div class="w-70 d-flex justify-content-between flex-column gap-3 col-4">
              <h5 class="card-title text-center"><%= entity.name %></h5>
              <span class="card-title text-center"><%= entity.created_at.strftime('%d %b %Y') %></span>
            </div>
          </div>
        </div>
    <% end %>
  </div>
  <%= link_to "Create a new Transaction", new_category_entity_path, :class => 'post-button btn btn-primary' %>
</div>