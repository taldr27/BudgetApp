<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
<nav class="navbar text-light nav-mobile p-2">
  <div class="d-flex justify-content-between w-100 align-items-center">
    <a><=</a>
    <%= fa_icon "user", class: "text-danger" %>
    <a class="navbar-brand text-light" href="#">Login</a>
<%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>

  </div>
  </nav>


  <div class="form-label-group">
    <%= f.email_field :email, class: "form-control", autocomplete: "email", placeholder: 'Email' %>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: 'Password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <label>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </label>
    </div>
  <% end %>

  
<% end %>

<%= render "devise/shared/links" %>
