<nav class="navbar text-light nav-mobile p-2">
  <div class="d-flex justify-content-between w-100 align-items-center">
<%= link_to fa_icon('arrow-left', class: 'fa-solid'), :back, class: 'btn btn-light' %>
<img src="<%= url_for(current_user.avatar) %>" alt="User Display Image" class="img-fluid rounded-circle avatar">

  </div>
</nav>
<%= form_with model: Category, html: {class: "form-horizontal"}, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name, "Category name:", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control", placeholder: "Enter the category name", value: "" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :icon, "Image:", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.file_field :icon, class: "form-control-file" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Create Category", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
