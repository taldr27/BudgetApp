<nav class="navbar text-light nav-mobile p-2">
  <div class="d-flex justify-content-between w-100 align-items-center">
    <button class="navbar-toggler text-light" type="button" data-toggle="collapse" data-target="#navbarNav">
      <span class="navbar-toggler-icon text-light"></span>
    </button>
    <a class="navbar-brand text-light" href="#">Categories</a>
<%= button_to "Log out", destroy_user_session_path, class: 'btn btn-dark', method: :delete, data: { turbo: false }  %>
