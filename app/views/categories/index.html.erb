<div class="container d-flex flex-column p-4 background-container">
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-md-4 mb-4 card-container">
        <div class="h-100 card-style">
          <img src="<%= url_for(category.icon) %>" alt="Category Icon" class="card-img-top category-icon col-4">
          <div class="w-70 d-flex justify-content-between flex-column gap-3 col-4">
            <h5 class="card-title text-center"><%= category.name %></h5>
            <span class="card-title text-center"><%= category.created_at.strftime('%d %b %Y') %></span>
          </div>
            <p class="card-text text-center col-4">Total amount: 30</p>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Create a new Category", new_category_path, :class => 'post-button btn btn-primary' %>
</div>





