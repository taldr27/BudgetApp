<%= render partial: 'shared/header', locals: { title: 'Categories' }  %>

<div class="container d-flex flex-column p-4 background-container">
<div class="row">
  <% @categories.each do |category| %>
    <div class="col-md-4 mb-3">
      <%= link_to category_entities_path(:category_id => category.id), style: "text-decoration: none; color: black;" do %>
        <div class="card h-100">
          <div class="card-body d-flex align-items-center">
              <% if category.icon.attached? %>
      <%= image_tag category.icon, class:"card-img-top", style:"max-width: 70px;" %>
    <% else %>
      <%= image_tag "dog.webp", class:"card-img-top", style:"max-width: 70px;"  %>
    <% end %>
            <div class="col-6">
              <h5 class="card-title"><%= category.name %></h5>
              <p class="card-text"><small class="text-muted"><%= category.created_at.strftime('%d %b %Y') %></small></p>
            </div>
            <div class="col-4">
              <p class="card-text">$<%= Category.total_amount(category) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

  <%= link_to "Create a new Category", new_category_path, :class => 'post-button btn btn-primary' %>
</div>





